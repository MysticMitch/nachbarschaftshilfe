<%- include("header") -%>

<h1 class="headline">Gemeinschaften ansehen</h1>

<% let ausgabezeile = ""; %>
<% for(var i=0; i < gemeinden.length; i++) { %>

<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
      <div class="col-md-4">
    <img src="/public/house-icon.png" class="card-img-top" alt="..." style="max-height: 260px; max-width:310px;">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%=gemeinden[i].bezeichnung%></h5>

          <% ausgabezeile = ""; %>

          <% ausgabezeile += "Mitglieder: " + gemeinden[i].mitglieder%>
          <% if(gemeinden[i].ortsname){ausgabezeile +=  ", " +  gemeinden[i].ortsname + " "}%>
          <% if(gemeinden[i].postleitzahl){ausgabezeile += gemeinden[i].postleitzahl}%>
          <% if(gemeinden[i].strasse){ausgabezeile += ", " + gemeinden[i].strasse + " "}%>
          <% if(gemeinden[i].hausnummer){ausgabezeile += gemeinden[i].hausnummer}%>

          <p class="card-text"><%=ausgabezeile%></p>
          <form method="POST" action="beitretenoderverlassen">
          <button name=beitreten value=<%=gemeinden[i].id_gemeinde%> class="btn btn-primary">Beitreten</button>
          <button name=verlassen value=<%=gemeinden[i].id_gemeinde%> class="btn btn-primary">Verlassen</button>
        </form>
        </div>
      </div>
    </div>
  </div>

<% } %>

<br><br>

<%- include("footer") -%>